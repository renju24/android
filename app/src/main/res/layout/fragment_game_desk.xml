<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/game_green_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:height="50dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="@color/colorGreen47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/game_emblema_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_green_block"
        app:layout_constraintEnd_toEndOf="@+id/game_green_block"
        app:layout_constraintStart_toStartOf="@+id/game_green_block"
        app:layout_constraintTop_toTopOf="@+id/game_green_block"
        app:srcCompat="@drawable/emblema"/>

    <ImageView
        android:id="@+id/board_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_green_block"
        app:srcCompat="@drawable/board" />

    <ImageView
    android:id="@+id/player1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/game_green_block"
    app:srcCompat="@drawable/loginshapebutton" />


    <TextView
        android:id="@+id/player1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1_name"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@+id/player1"
        app:layout_constraintTop_toBottomOf="@+id/game_green_block" />

    <TextView
        android:id="@+id/player1_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_str"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_green_block" />


    <ImageView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/loginshapebutton" />


    <TextView
        android:id="@+id/player2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="40dp"
        android:text="@string/player2_name"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player2" />

    <TextView
        android:id="@+id/player2_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="40dp"
        android:text="@string/step_str"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>